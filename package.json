{
  "scripts": {
    "js-build": "babel front-end/es6 -d public/assets/js",
    "js-watch": "babel front-end/es6 -d public/assets/js --watch",
    "css-build": "tailwind -i front-end/css/tailwind.css -o public/assets/css/tailwind.css --minify",
    "css-prod": "cross-env NODE_ENV=production tailwindcss -i front-end/css/tailwind.css -o public/assets/css/tailwind.css --minify"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "autoprefixer": "^10.3.6",
    "cross-env": "^7.0.3",
    "postcss": "^8.3.8",
    "tailwindcss": "^2.2.16"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
